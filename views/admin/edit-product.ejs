<%- include('../layouts/head')%>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../layouts/navigation')%>
    <main>
        <form class="product-form" action="/admin/<% if(editing) {%>edit-product<% } else {%>add-product<% } %>" method="post">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) {%><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="imgUrl">Image Url</label>
                <input type="text" name="imgUrl" id="imgUrl" value="<% if(editing) {%><%= product.imgUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" value="<% if(editing) {%><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea type="text" name="description" id="description" row="5"><% if(editing) {%><%= product.description %><% } %></textarea>
            </div>
            <% if ( editing ) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
            <button type="submit"><% if(editing) { %>Update product<% } else { %>Add product<% } %></button>
        </form>
    </main>
</body>
</html>