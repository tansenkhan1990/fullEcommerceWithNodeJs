<%- include('../layouts/head')%>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/form.css">
</head>
<body>
    <%- include('../layouts/navigation')%>
    <main>
        <% if ( products.length > 0 ) { %>
            <div class="grid">
                <% for (let product of products) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imgUrl %>" alt="<%= product.imgUrl %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a class="btn" href="/products-list/<%= product._id %>">Details</a>
                            <%- include('../layouts/add-to-cart', {product: product}) %> <!--Because "product" is a local variable of the for loop so we need to pass it to the include in this way-->
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No products found !</h1>
        <% } %>
    </main>
</body>
</html>